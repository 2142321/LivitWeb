@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LivitWeb.Models.EditViewModel


<div class="app-background">
    <div class="activity-banner mb-2">
        <h4>New Activity</h4>
    </div>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-action="Edit">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Descrition">Description</label>
                        <input asp-for="Descrition" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Date</label>
                        <input asp-for="Date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Location">Location</label>
                        <input asp-for="Location" class="form-control" value=EditViewModel.Title/>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="isGroup">
                                <input asp-for="isGroup" />
                                @Html.DisplayNameFor(m => m.isGroup)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="isDone">
                                <input asp-for="isDone" />
                                @Html.DisplayNameFor(m => m.isDone)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button">Update</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>